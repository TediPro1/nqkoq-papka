@model SmartAccessLift.Web.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartAccess Lift</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh; display: flex; align-items: center; justify-content: center;">
    <div class="card" style="max-width: 400px; width: 90%; box-shadow: 0 20px 25px rgba(0, 0, 0, 0.15);">
        <div style="text-align: center; margin-bottom: 2rem;">
            <h1 style="color: var(--primary); margin-bottom: 0.5rem;">SmartAccess Lift</h1>
            <p style="color: var(--text-light);">Create your account</p>
        </div>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger" style="color: var(--accent-red); margin-bottom: 1rem;"></div>

            <div class="form-group">
                <label asp-for="FirstName" style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: var(--text-dark);"></label>
                <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName" style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: var(--text-dark);"></label>
                <input asp-for="LastName" class="form-control" placeholder="Enter your last name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: var(--text-dark);"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: var(--text-dark);"></label>
                <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: var(--text-dark);"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary" style="width: 100%;">Register</button>

            <div style="text-align: center; margin-top: 1rem; padding-top: 1rem; border-top: 1px solid #E5E7EB;">
                <p style="color: var(--text-light);">Already have an account? <a asp-controller="Account" asp-action="Login" style="color: var(--primary); text-decoration: none; font-weight: 600;">Sign in</a></p>
            </div>
        </form>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

